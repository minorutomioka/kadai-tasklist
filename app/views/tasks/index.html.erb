<h1>タスクリスト</h1>

<table class="table table-boarderd table-striped">
  <thead>
    <tr>
    <th>id</th>
    <th>status</th>
    <th>タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>            
      <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.status %></td>
      <td><%= task.content %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

<%= link_to '新規タスクの追加',new_task_path ,class: 'btn btn-primary' %>